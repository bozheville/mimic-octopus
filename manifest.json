{
    "name": "sociomantic-github-grid-extention",
    "version": "0.0.1",
    "manifest_version": 2,
    "permissions": [
        "cookies",
        "tabs",
        "https://github.com/*",
        "https://api.github.com/*"
    ],
    "content_security_policy": "script-src 'self' https://api.github.com; object-src 'self'",
    "browser_action": {
        "default_title": "Open",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}
